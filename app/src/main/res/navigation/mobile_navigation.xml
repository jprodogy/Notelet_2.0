<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.notelet20.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.notelet20.ui.profile.ProfileFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_my_notes"
        android:name="com.example.notelet20.ui.myNotes.MyNotesFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_my_notes" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.notelet20.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_inbox"
        android:name="com.example.notelet20.ui.inbox.InboxFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_inbox_list" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.notelet20.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search"/>

</navigation>